<h1>New user</h1>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :orders %><br />
    <%= f.text_field :orders %>
  </p>
  <p>
    <%= f.label :is_vendor %><br />
    <%= f.check_box :is_vendor %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', users_path %>